<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <!-- Console appender for logging to the console -->
        <Console name="CONSOLE">
            <PatternLayout pattern="%p - %m%n"/>
        </Console>

        <!-- File appender for main logs, with the path updated to accommodate your project structure -->
        <File name="MAIN" fileName="./logs/main.log">
            <PatternLayout pattern="%d [%t] %p %c - %m%n"/>
        </File>

        <!-- File appender for debug logs, with the path updated to accommodate your project structure -->
        <File name="DEBUG_LOG" fileName="./logs/debug.log">
            <PatternLayout pattern="%d [%t] %p %c - %m%n"/>
        </File>
    </appenders>

    <loggers>
        <!-- Root logger for general logging, setting level to INFO and above -->
        <Root level="INFO">
            <AppenderRef ref="CONSOLE" level="WARN"/>
            <AppenderRef ref="MAIN"/>
        </Root>

        <!-- Logger for specific package (org.example) to log at DEBUG level -->
<!--        <Logger name="org.example" level="DEBUG">-->
<!--            <AppenderRef ref="DEBUG_LOG"/>-->
<!--        </Logger>-->
    </loggers>
</configuration>

